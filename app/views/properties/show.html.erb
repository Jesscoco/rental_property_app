<p id="notice"><%= notice %></p>

<p>
  <strong>Property:</strong>
  <%= @property.property %>
</p>

<p>
  <strong>Rent:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>Address:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>Building age:</strong>
  <%= @property.building_age %>
</p>

<p>
  <strong>Remarks:</strong>
  <%= @property.remarks %>
</p>

<hr>

<% @property.railways.each_with_index do |f, index|%>
  <% if f.name_of_railway_line != "" &&  f.station_name != "" && f.how_many_minutes_walk != ""%>
    <h1> Nearest station<%= index +1 %> </h1>
    <p>
      <strong>Name of railway line:</strong>
      <%= f.name_of_railway_line %>
    </p>

    <p>
      <strong>Station name:</strong>
      <%= f.station_name %>
    </p>

    <p>
      <strong>How many minutes walk:</strong>
      <%= f.how_many_minutes_walk %>
    </p>
  <% end %>
 
<%end%>
